<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <include>Animation.HeaderDialog.Open</include>
    <onload condition="Library.IsScanningVideo + Skin.HasSetting(UpdateArt.Enabled)">SetProperty(UpdateArt,1)</onload>
    <onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">XBMC.RunScript(script.artwork.downloader,mode=custom,silent=true,landscape,clearlogo,clearart)</onunload>
    <onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">ClearProperty(UpdateArt)</onunload>
    <controls>
        <control type="group">
            <posx>400r</posx>
            <visible>!Window.IsVisible(DialogProgress.xml)</visible>
            <visible>!Window.IsVisible(DialogKaiToast.xml)</visible>
            <visible>!Window.IsVisible(DialogOK.xml)</visible>
            <visible>!Window.IsVisible(DialogYesNo.xml)</visible>
            <visible>!Window.IsVisible(fullscreenvideo)</visible>
            <visible>!Window.IsVisible(visualisation)</visible>
            <control type="group">
                <include>Animation.HeaderDialog</include>
                <control type="image">
                    <posx>282</posx>
                    <posy>27</posy>
                    <width>100</width>
                    <height>100</height>
                    <texture>dialog/loading-back-busy.png</texture>
                    <colordiffuse>$VAR[TopBarMainLabel]</colordiffuse>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                </control>
                <control type="image">
                    <posx>282</posx>
                    <posy>27</posy>
                    <width>100</width>
                    <height>100</height>    
                    <texture>$INFO[Control.GetLabel(32),dialog/progress/p,.png]</texture>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                </control>
                <control type="label">
                    <posx>268</posx>
                    <posy>115</posy>
                    <width>128</width>
                    <height>100</height>
                    <aligny>top</aligny>
                    <font>Font-Sublabel</font>
                    <textcolor>$VAR[TopBarSubLabel]</textcolor>
                    <align>center</align>
                    <aligny>top</aligny>
                    <label>$INFO[Control.GetLabel(32),,%]</label>
                </control>
            </control>
            <control type="progress" id="32" description="Progress bar">
                <animation effect="fade" end="0" condition="true">Conditional</animation>
               
            </control>
            
            
            <control type="label" id="30">
                <posx>270</posx>
                <posy>44</posy>
                <width>500</width>
                <height>70</height>
                <font>Font-Sublabel</font>
                <align>right</align>
                <aligny>center</aligny>
                <textcolor>$VAR[TopBarMainLabel]</textcolor>
                <wrapmultiline>true</wrapmultiline>
            </control>
            <control type="label" id="31">
                <posx>270</posx>
                <posy>102</posy>
                <width>500</width>
                <font>Font-ListInfo</font>
                <textcolor>$VAR[TopBarSubLabel]</textcolor>
                <align>right</align>
            </control>
        </control>   
    </controls>
</window>
