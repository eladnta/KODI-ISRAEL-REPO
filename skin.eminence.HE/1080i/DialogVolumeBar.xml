<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="104">
    <defaultcontrol always="true">noop</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>20</zorder>
    <controls>
        <control type="group" description="Left Side Header">
   
            <control type="image">
                <posy>18</posy>
                <posx>-88</posx>
                <width>300</width>
                <height>164</height>    
                <texture align="left" border="75">$VAR[HeaderTileTexture]</texture>
                <colordiffuse>$VAR[HeaderColorBG]</colordiffuse>
                <visible>Window.IsVisible(DialogSeekBar.xml) + ![!Window.IsVisible(DialogSlider.xml) + !Window.IsVisible(DialogPVRChannelsOSD.xml) + [Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Window.IsActive(videoosd) | Window.IsActive(musicosd) | Player.ShowInfo | Window.IsActive(DialogFullScreenInfo.xml)]]</visible>
            </control>
            <control type="image">
                <posx>44</posx>
                <posy>26</posy>
                <width>100</width>
                <height>100</height>
                <texture>dialog/volume-back.png</texture>
                <aspectratio align="center" aligny="center">keep</aspectratio>
            </control>
            <control type="image">
                <posx>44</posx>
                <posy>26</posy>
                <width>100</width>
                <height>100</height>    
                <texture>$INFO[Control.GetLabel(1),dialog/progress/p,.png]</texture>
                <aspectratio align="center" aligny="center">keep</aspectratio>
            </control>
            
            
            <control type="label">
                <posx>0</posx>
                <posy>115</posy>
                <width>184</width>
                <aligny>top</aligny>
                <font>Font-Sublabel</font>
                <align>center</align>
                <textcolor>TopBarIcon</textcolor>
                <label>$INFO[Player.Volume]</label>
            </control>
            <control type="progress" id="1">
                <info>Player.Volume</info>
                <animation effect="fade" end="0" condition="true">Conditional</animation>
            </control>
        </control>
       
    </controls>

</window>
