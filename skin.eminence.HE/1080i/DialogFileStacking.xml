<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2008">
    <defaultcontrol always="true">450</defaultcontrol>
    <allowoverlay>yes</allowoverlay>

    <controls>
        <control type="group">  
            <include>Animation.SlideOpen.Left</include>
            <include>DefSidePanel</include>
            <control type="list" id="450">
                <include>DefMyNavBarGroupList</include>
                <itemlayout width="440" height="90">
                    <control type="label">
                        <posx>30</posx>
                        <width>380</width>
                        <height>90</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout width="440" height="90">
                    <control type="image">
                        <width>440</width>
                        <height>90</height>
                        <texture colordiffuse="PosterHighlight">common/white.png</texture>
                    </control>
                    <control type="label">
                        <posx>30</posx>
                        <width>380</width>
                        <height>90</height>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                        <textcolor>Selected</textcolor>
                    </control>
                </focusedlayout>
            </control>
        </control>

    </controls>

</window>
